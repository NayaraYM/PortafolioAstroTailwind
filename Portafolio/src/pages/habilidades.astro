  <script>
    // Intersection Observer para animar las barras cuando sean visibles
    const observerOptions = {
      threshold: 0.5,
      rootMargin: "0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const card = entry.target;
          const skillBar = card.querySelector(".skill-bar") as HTMLElement;
          const percentage = card.querySelector(".skill-percentage");
          const targetWidth = parseInt(
            skillBar.getAttribute("data-width") || "0"
          );

          // Animar la barra
          setTimeout(() => {
            skillBar.style.width = `${targetWidth}%`;
          }, 100);

          // Animar el porcentaje
          let currentPercentage = 0;
          const duration = 1000;
          const steps = 60;
          const increment = targetWidth / steps;
          const stepDuration = duration / steps;

          const percentageInterval = setInterval(() => {
            currentPercentage += increment;
            if (currentPercentage >= targetWidth) {
              currentPercentage = targetWidth;
              clearInterval(percentageInterval);
            }
            if (percentage) {
              percentage.textContent = `${Math.round(currentPercentage)}%`;
            }
          }, stepDuration);

          observer.unobserve(card);
        }
      });
    }, observerOptions);

    // Observar todas las tarjetas de habilidades
    document.querySelectorAll(".skill-card").forEach((card) => {
      observer.observe(card);
    });
  </script>
