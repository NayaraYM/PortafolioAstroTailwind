---
import Base from "../layouts/Base.astro";
import "../styles/proyectos.css"; // ✅ Importa el CSS externo

const proyectos = [
  {
    id: 1,
    titulo: "Lost Pet",
    descripcion: "Aplicación para encontrar mascotas perdidas.",
    imagen: "/img/LP.PNG",
    demo: "#",
    codigo: "#",
    tags: ["React", "Node.js", "MongoDB"],
  },
  {
    id: 2,
    titulo: "VocaLingo",
    descripcion: "Aplicación de traducción.",
    imagen: "/img/VL.PNG",
    demo: "#",
    codigo: "#",
    tags: ["Vue.js", "API", "CSS3"],
  },
  {
    id: 3,
    titulo: "EpicEcho",
    descripcion: "App sencilla de alarma.",
    imagen: "/img/EE.PNG",
    demo: "#",
    codigo: "#",
    tags: ["JavaScript", "HTML5", "CSS3"],
  },
];
---

<Base
  title="Proyectos - Nayara Yap"
  description="Proyectos de desarrollo web de Nayara Yap"
>
  <!-- Hero Section con animación de partículas -->
  <section class="relative min-h-screen overflow-hidden pt-20">
    <!-- Fondo animado -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-[#002f6c] via-[#0a58ca] to-[#002f6c] animate-gradient"
    >
    </div>

    <!-- Círculos flotantes decorativos -->
    <div
      class="absolute top-20 left-10 w-72 h-72 bg-blue-400/10 rounded-full blur-3xl animate-float"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-purple-400/10 rounded-full blur-3xl animate-float-delayed"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/2 w-64 h-64 bg-cyan-400/10 rounded-full blur-3xl animate-pulse-slow"
    >
    </div>

    <!-- Contenido -->
    <div class="relative z-10 container mx-auto px-4 py-16">
      <!-- Título con animación -->
      <div class="text-center text-white mb-20">
        <div class="inline-block mb-4">
          <span
            class="inline-block px-6 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-medium border border-white/20 animate-slide-down"
          >
            ✨ Portafolio
          </span>
        </div>
        <h2 class="text-6xl md:text-7xl font-bold mb-6 animate-slide-up">
          Mis <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-300 to-blue-300"
            >Proyectos</span
          >
        </h2>
        <p
          class="text-xl md:text-2xl text-gray-200 max-w-2xl mx-auto animate-fade-in-delayed leading-relaxed"
        >
          Explora mi trabajo en desarrollo web y aplicaciones innovadoras
        </p>
      </div>

      <!-- Grid de Proyectos -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto"
      >
        {
          proyectos.map((proyecto, index) => (
            <div
              class="project-card group relative bg-white/5 backdrop-blur-md rounded-3xl overflow-hidden border border-white/10 hover:border-white/30 transition-all duration-500"
              style={`animation-delay: ${index * 0.2}s`}
            >
              <div class="absolute inset-0 bg-gradient-to-br from-cyan-400/0 via-blue-400/0 to-purple-400/0 group-hover:from-cyan-400/10 group-hover:via-blue-400/10 group-hover:to-purple-400/10 transition-all duration-500" />

              <div class="relative h-56 overflow-hidden">
                <img
                  src={proyecto.imagen}
                  alt={proyecto.titulo}
                  class="w-full h-full object-cover transform group-hover:scale-110 group-hover:rotate-2 transition-all duration-700"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300" />

                <div class="absolute bottom-4 left-4 right-4 flex flex-wrap gap-2 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-4 group-hover:translate-y-0">
                  {proyecto.tags.map((tag) => (
                    <span class="px-3 py-1 bg-white/90 backdrop-blur-sm text-xs font-semibold text-gray-800 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>

              <div class="relative p-6">
                <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-cyan-300 transition-colors duration-300">
                  {proyecto.titulo}
                </h3>
                <p class="text-gray-300 mb-6 leading-relaxed">
                  {proyecto.descripcion}
                </p>

                <div class="flex gap-3">
                  <a
                    href={proyecto.demo}
                    class="flex-1 relative px-4 py-3 bg-gradient-to-r from-cyan-500 to-blue-500 text-white rounded-xl font-medium overflow-hidden group/btn transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-cyan-500/50"
                  >
                    <span class="relative z-10 flex items-center justify-center gap-2">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                        />
                      </svg>
                      Demo
                    </span>
                    <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-cyan-600 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300" />
                  </a>

                  <a
                    href={proyecto.codigo}
                    class="flex-1 px-4 py-3 bg-white/5 backdrop-blur-sm border-2 border-white/20 text-white rounded-xl font-medium hover:bg-white/10 hover:border-white/40 transition-all duration-300 hover:scale-105 flex items-center justify-center gap-2"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                    Código
                  </a>
                </div>
              </div>
              <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-cyan-400/20 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
